# Disable directory browsing
Options -Indexes

# Custom error page
ErrorDocument 403 "403 Forbidden - Access Denied"

# Protect sensitive files
<FilesMatch "\.(sql|md|txt)$">
    Require all denied
</FilesMatch>

# Block access to all PHP files by default
<FilesMatch "\.php$">
    Require all denied
</FilesMatch>

# Allow only specific public PHP files
<FilesMatch "^(form|login|dashboard|logout|setup|update_database)\.php$">
    Require all granted
</FilesMatch>
